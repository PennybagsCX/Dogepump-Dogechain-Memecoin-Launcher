# ==============================================================================
# ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and .env.production with appropriate values

# ------------------------------------------------------------------------------
# SERVER CONFIGURATION
# ------------------------------------------------------------------------------
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# ------------------------------------------------------------------------------
# CORS CONFIGURATION
# ------------------------------------------------------------------------------
# Development: http://localhost:5173
# Production: https://dogepump.com
CORS_ORIGIN=http://localhost:5173

# ------------------------------------------------------------------------------
# FILE UPLOAD CONFIGURATION
# ------------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DIR=./uploads

# ------------------------------------------------------------------------------
# JWT CONFIGURATION
# ------------------------------------------------------------------------------
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production

# ------------------------------------------------------------------------------
# AUTHENTICATION CONFIGURATION
# ------------------------------------------------------------------------------
# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# Username Requirements
USERNAME_MIN_LENGTH=3
USERNAME_MAX_LENGTH=20

# Token Management
BCRYPT_ROUNDS=10
MAX_SESSIONS_PER_USER=5
SESSION_CLEANUP_INTERVAL=3600000

# Auth Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# ------------------------------------------------------------------------------
# RATE LIMITING CONFIGURATION
# ------------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ------------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://localhost:5432/dogepump_dev

# ------------------------------------------------------------------------------
# BLOCKCHAIN CONFIGURATION
# ------------------------------------------------------------------------------
# Dogechain RPC URLs
DOGCHAIN_RPC_URL=https://rpc.dogechain.dog
DOGCHAIN_TESTNET_RPC_URL=https://rpc-testnet.dogechain.dog

# Dogechain Explorer URLs
DOGCHAIN_EXPLORER_URL=https://explorer.dogechain.dog
DOGCHAIN_TESTNET_EXPLORER_URL=https://explorer-testnet.dogechain.dog

# Dogechain Chain IDs
DOGCHAIN_CHAIN_ID=2000
DOGCHAIN_TESTNET_CHAIN_ID=2000

# Token Addresses (Mainnet)
DC_TOKEN_ADDRESS=0x7B4328c127B85369D9f82ca0503B000D09CF9180
WDOGE_TOKEN_ADDRESS=0xB7ddC6414bf4F5515b52D8BdD69973Ae205ff101

# ------------------------------------------------------------------------------
# DEX CONFIGURATION
# ------------------------------------------------------------------------------
# DEX Smart Contract Addresses (Mainnet)
# IMPORTANT: Replace these with your deployed contract addresses
VITE_DEX_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
VITE_DEX_ROUTER_ADDRESS=0x0000000000000000000000000000000000000000

# DEX Smart Contract Addresses (Testnet)
VITE_DEX_FACTORY_ADDRESS_TESTNET=0x0000000000000000000000000000000000000000
VITE_DEX_ROUTER_ADDRESS_TESTNET=0x0000000000000000000000000000000000000000

# DEX Configuration
VITE_DEX_DEFAULT_SLIPPAGE=0.5
VITE_DEX_DEFAULT_DEADLINE=20
VITE_DEX_MIN_POOL_LIQUIDITY_USD=1000
VITE_DEX_MAX_PRICE_IMPACT_PERCENT=5
VITE_DEX_FEE_PERCENT=0.3

# ------------------------------------------------------------------------------
# LAUNCH PAGE CONFIGURATION
# ------------------------------------------------------------------------------
# Token launch parameters
LAUNCH_FEE=10000
GRADUATION_MARKETCAP_USD=6900
MAX_CREATOR_BUY_PERCENTAGE=0.03
TOTAL_SUPPLY=1000000000
INITIAL_TOKEN_PRICE=0.000005

# Rate limiting for token launches
LAUNCH_RATE_LIMIT_MAX=5
LAUNCH_RATE_LIMIT_WINDOW_MS=3600000

# ------------------------------------------------------------------------------
# API CONFIGURATION
# ------------------------------------------------------------------------------
# Backend API URL
# Development: http://localhost:3001
# Production: https://api.dogepump.com
VITE_API_URL=http://localhost:3001

# WebSocket Price Updates
# Leave empty to disable WebSocket and use polling instead
VITE_WS_PRICE_URL=ws://localhost:3001

# Price Oracle Configuration
PRICE_UPDATE_INTERVAL=30000
PRICE_CACHE_TTL=60000
TWAP_WINDOW_SECONDS=300
MIN_POOL_LIQUIDITY_USD=1000
MAX_PRICE_DEVIATION=0.15

# External API Endpoints
DEXSCREENER_API_BASE=https://api.dexscreener.com/latest
GECKOTERMINAL_API_BASE=https://api.geckoterminal.com/api/v2

# ------------------------------------------------------------------------------
# DEVELOPMENT/TEST DATA CONFIGURATION
# ------------------------------------------------------------------------------
# TEST DATA MODE (DEV ONLY!)
# Set to 'true' to use mock data for development/testing
# NEVER set this in production!
VITE_ENABLE_TEST_DATA=false

# ------------------------------------------------------------------------------
# SENTRY ERROR TRACKING
# ------------------------------------------------------------------------------
# Get your DSN from https://sentry.io
# Development: Leave empty to disable
# Production: Set your Sentry DSN
VITE_SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_SESSION_SAMPLE_RATE=1.0

# ------------------------------------------------------------------------------
# SECURITY CONFIGURATION
# ------------------------------------------------------------------------------
# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: blob: https: http:
CSP_CONNECT_SRC='self' blob: data: https://esm.sh https://aistudiocdn.com https://fonts.googleapis.com

# ------------------------------------------------------------------------------
# FEATURES FLAGS
# ------------------------------------------------------------------------------
# Enable/disable features
ENABLE_DEMO_AUTH=true
ENABLE_MODERATION=true
ENABLE_COMMENTS=true
ENABLE_FARMS=true
ENABLE_EARN=true

# ------------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# ------------------------------------------------------------------------------
# Enable debug mode (shows more logs, console output)
DEBUG=false

# Enable hot module replacement
HMR_ENABLED=true

# ------------------------------------------------------------------------------
# PRODUCTION SETTINGS (.env.production)
# ------------------------------------------------------------------------------
# Copy these to a separate .env.production file for production builds

# NODE_ENV=production
# VITE_API_URL=https://api.dogepump.com
# CORS_ORIGIN=https://dogepump.com
# LOG_LEVEL=warn
# SENTRY_DSN=your-production-sentry-dsn-here
# SENTRY_ENVIRONMENT=production
# CSP_ENABLED=true
# DEBUG=false
